<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:layout_marginTop="20dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="vertical"
			android:id="@+id/opppLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="50dp"
			android:layout_marginStart="20dp">

			<TextView
				android:id="@+id/oppoMessage"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/text_color"
				android:text="This is opponent message"
				android:background="@drawable/msg_back"
				android:padding="15dp"
				/>

			<TextView
				android:layout_marginTop="5dp"
				android:textSize="10sp"
				android:id="@+id/oppoMsgTime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="10-08-2021 05:10 PM"

				/>

		</LinearLayout>

		<LinearLayout
			android:layout_alignParentEnd="true"
			android:orientation="vertical"
			android:id="@+id/myLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="20dp"
			android:layout_marginStart="50dp">

			<TextView
				android:id="@+id/myMessage"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/text_color"
				android:text="This is my message"
				android:background="@drawable/my_msg_back"
				android:padding="15dp"
				/>

			<TextView
				android:layout_gravity="end"
				android:layout_marginTop="5dp"
				android:textSize="10sp"
				android:id="@+id/myMsgTime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="10-08-2021 05:10 PM"

				/>

		</LinearLayout>
	</RelativeLayout>

</RelativeLayout>